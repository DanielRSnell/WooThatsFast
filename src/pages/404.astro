---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Navigation from "@/components/global/Navigation.astro";
---

<BaseLayout>
  <div class="min-h-screen flex flex-col">
    <Navigation />
    <main class="flex-grow flex items-center justify-center p-8">
      <div class="text-center">
        <Text
          tag="h1"
          variant="displayLG"
          class="text-black dark:text-white tracking-wide text-balance font-serif italic"
        >
          404 - Page Not Found
        </Text>
        <Text
          variant="textLG"
          class="text-zinc-500 dark:text-zinc-400 mt-4"
        >
          The page you're looking for doesn't exist.
        </Text>
        <Text
          tag="a"
          href="/"
          variant="textSM"
          class="inline-block mt-8 bg-black text-white dark:bg-white dark:text-black px-6 py-3 hover:bg-zinc-800 dark:hover:bg-zinc-200 duration-200"
        >
          Go Home
        </Text>
      </div>
    </main>
  </div>
</BaseLayout>
