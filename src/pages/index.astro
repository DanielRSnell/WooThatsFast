---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Shadow from "@/components/global/Shadow.astro";
import Intro from "@/components/landing/Intro.astro";
import Faq from "@/components/landing/Faq.astro";
import Footer from "@/components/global/Footer.astro";
import Pricing from "@/components/landing/Pricing.astro";
import Navigation from "@/components/global/Navigation.astro";
import { getEntry } from 'astro:content';

const homeContent = await getEntry('pages', 'home');
---

<BaseLayout>
  <section class="relative overflow-hidden">
    <Shadow />
    <div class="p-8 lg:px-44 lg:py-24 2xl:px-24 relative">
      <Navigation />
      <Intro content={homeContent.data} />
      <Pricing content={homeContent.data} />
      <Faq content={homeContent.data} />
      <Footer />
    </div>
  </section>
</BaseLayout>
